---
// Optimized Image
import { ImageComponent } from "@/components/custom/Image/ImageComponent";
---

<!-- Login / Register Options -->
<div class="relative z-20">
  <h2 class="pb-12 text-4xl font-medium text-center -leading-5">
    Inicia sesión en<br />
    Sabata directamente
  </h2>
  <div class="flex ml-7">
    <p class="text-sm text-center">
      Si no tienes una cuenta, puedes
      <a
        data-astro-prefetch="tap"
        id="toRegisterText"
        href="/es/auth/register"
        class="text-[#ef7674] cursor-pointer hover:underline"
        >registrarte ahora aquí.</a
      ><br />
      Unete nuestra comunidad ahora.
    </p>
  </div>
</div>
<div
  class="bg-[#ef7674] top-[35%] left-[-45%] absolute translate-x-[-50%] translate-y-[-50%] mix-blend-multiply filter blur-xl opacity-20 h-80 w-80 inset-0 m-auto rounded-full"
>
</div>
<div
  class="bg-[#e0ba6c] top-[55%] left-[-20%] absolute translate-x-[-50%] translate-y-[-50%] mix-blend-multiply filter blur-xl opacity-20 h-80 w-80 inset-0 m-auto rounded-full"
>
</div>
<img
  loading="lazy"
  class="absolute translate-x-[-50%] translate-y-[-50%] left-[52.5%] top-[60%]"
  src="https://i.ibb.co/JHxFPfB/woman-5831820-1280-removebg-preview.png"
  alt=""
/>
