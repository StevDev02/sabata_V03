---
// Components Astro
import RegisterOptionText from "./RegisterOptionText.astro";
import NavRegister from "./custom/nav/NavRegister.astro";
// Components React
import { RegisterForm } from "./RegisterForm";
// Styles
import "./Register.module.css";
---

<!-- Register Page -->
<section
  class="w-full bg-[#e6e7eb] h-[110dvh] ">
  <header class="">
    <NavRegister />
  </header>
  <section
    class="flex items-center justify-between w-full gap-10 pl-20 header__content pr-20"
  >
    <RegisterForm client:idle />
    <RegisterOptionText />
  </section>
</section>
